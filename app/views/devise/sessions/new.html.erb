            <div class="tiles__spotTile-cover">
              <p class="tiles__spotTile-name">Radijs</p>
              <p class="tiles__spotTile-location">Amsterdam, De Pijp</p>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-md-4 tiles__spotTile">
          <div class="tiles__spotTile-background" style="background: url('https://s-media-cache-ak0.pinimg.com/originals/b8/46/7c/b8467c5b987baeae691bd802f406d9b1.jpg')">
            <div class="tiles__spotTile-cover">
              <p class="tiles__spotTile-name">Bar Spek</p>
              <p class="tiles__spotTile-location">Amsterdam, Centrum</p>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-md-4 tiles__spotTile">
          <div class="tiles__spotTile-background" style="background: url('http://cafeterbrugge.nl/wp-content/uploads/2015/10/slide1.jpg')">
            <div class="tiles__spotTile-cover">
              <p class="tiles__spotTile-name">Ter Brugge</p>
              <p class="tiles__spotTile-location">Amsterdam, West</p>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-md-4 tiles__spotTile">
          <div class="tiles__spotTile-background" style="background: url('http://www.leukeadresjesvanyvette.nl/wp-content/uploads/2012/07/huiskamer-lerestaurant.jpg')">
            <div class="tiles__spotTile-cover">
              <p class="tiles__spotTile-name">La Restaurant</p>
              <p class="tiles__spotTile-location">Amsterdam, Centrum</p>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-md-4 tiles__spotTile">
          <div class="tiles__spotTile-background" style="background: url('http://www.freeonlinemarketing.nl/rhoon/img/e6b027c06deabe6034fce2b455f1045a.jpg')">
            <div class="tiles__spotTile-cover">
              <p class="tiles__spotTile-name">Vitaria-Eeterij Family</p>
              <p class="tiles__spotTile-location">Amsterdam, Centrum</p>
            </div>
          </div>
        </div>

        <div class="clearfix"></div>

        <%= link_to(search_nearest_pins_path) do%>
          <button type="submit" class="btn btn-default button--spots">View popular spots</button>
        <% end %>

      </div>
    </div>

