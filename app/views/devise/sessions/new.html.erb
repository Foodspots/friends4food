<div class="infoboard">
    <div class="infoboard__container">
      <div class="infoboard__cover">
        <p class="infoboard__title">Share your favorite FoodSpot</p>
        <p class="infoboard__title-question">And the popular places of your friends</p>
				<%= link_to user_omniauth_authorize_path(:facebook) do %>
          <button type="submit" class="btn btn-default infoboard__button"><i class="glyphicon glyphicon-chevron-right"></i>Discover now!</button>
        <% end %>
        <div class="col-md-10 margin-auto infoboard__points">
          <div class="infoboard__points-column col-md-4">
            <div class="infoboard__points-number margin-auto">1</div>
            <p class="infoboard__points-title">Select your favorite restaurants</p>
          </div>
          <div class="infoboard__points-column col-md-4">
            <div class="infoboard__points-number margin-auto">2</div>
            <p class="infoboard__points-title">Connect with your friends</p>
          </div>
          <div class="infoboard__points-column col-md-4">
            <div class="infoboard__points-number margin-auto">3</div>
            <p class="infoboard__points-title">Discover popular spots of your friends</p>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>

   <div class="clearfix"></div>

