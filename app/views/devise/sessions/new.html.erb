<% content_for(:bodyclass, 'login')%>
<div class="row">
	<div class="col-md-10 col-md-push-1">
		<div class="panel panel-default loginpanel">
			<div class="panel-body loginnote">
			<h1>Welcome to Foodspots</h1>
			<p>Discover your friends' favorite spots in town.</p>
		
			<h1>How does it work? </h1>
			  <ol>
				<li>Connect with Facebook</li>
				<li>Share you location</li>
				<li>Discover new FoodSpots</li>
			  </ol>
			  <h1>Start now:</h1>
			  <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-social btn-facebook" do %>
			  <span class="glyphicon glyphicon-play"></span>
			  Connect with Facebook
			  <% end %>
			  <br/><br/>
			  <u>Note: FoodSpots will never post on your wall</u>
			  </div>
		</div>
	</div>
</div>

 