<div class="infoboard">
    <div class="infoboard__container">
      <div class="infoboard__cover">
        <p class="infoboard__title">Find a nice food spot</p>
        <p class="infoboard__title-question">Where do your friends like to go to?</p>
				<%= link_to user_omniauth_authorize_path(:facebook) do %>
          <button type="submit" class="btn btn-default infoboard__button"><i class="ion-chevron-right"></i>Discover now!</button>
        <% end %>
        <div class="col-md-10 margin-auto infoboard__points">
          <div class="infoboard__points-column col-md-4">
            <div class="infoboard__points-number margin-auto">1</div>
            <p class="infoboard__points-title">Connect<br/> with Facebook</p>
            <p class="infoboard__points-description">Don't freak out:<br/> FoodSpots will never post something on your wall</p>
          </div>
          <div class="infoboard__points-column col-md-4">
            <div class="infoboard__points-number margin-auto">2</div>
            <p class="infoboard__points-title">View where your friends like to go to</p>
            <p class="infoboard__points-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor</p>
          </div>
          <div class="infoboard__points-column col-md-4">
            <div class="infoboard__points-number margin-auto">3</div>
            <p class="infoboard__points-title">Discover new food spots nearby</p>
            <p class="infoboard__points-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor</p>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>

   <div class="clearfix"></div>

    <div class="tiles">
      <p class="tiles__title">Most popular foodspots this week</p>
      <div class="col-md-10 tiles__container margin-auto">
        <div class="col-sm-6 col-md-4 tiles__spotTile">
          <div class="tiles__spotTile-background" style="background: url('https://media-cdn.tripadvisor.com/media/photo-s/07/d4/24/2a/barra.jpg')">
            <div class="tiles__spotTile-cover">
              <p class="tiles__spotTile-name">Barra</p>
              <p class="tiles__spotTile-location">Amsterdam, Centrum</p>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-md-4 tiles__spotTile">
