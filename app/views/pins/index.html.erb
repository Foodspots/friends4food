<h1>Alle recepten</h1>
<p>Bekijk hier alle recepten die op Altijd Heerlijk te vinden zijn.</p>

<% if user_signed_in? %>  
<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
          <%= link_to image_tag(pin.image.url(:medium)), pin %>
          <div class="panel-body">
          <strong><p><%= pin.description %></p></p></strong>
          <div class="actions">
                <p><%= link_to 'Bekijk recept', pin_path(pin) %></p>
                <p>Toegevoegd door:</p>
                <p><strong><%= pin.user.name if pin.user %></strong></p>
              </div>
          </div>
    </div>
  <% end %>
</div>
<% else %>
<%= render 'pages/login' %>
<% end %>