<% if user_signed_in? %> 
<h1>Alle recepten</h1>
<p>Bekijk hier alle recepten die op Altijd Heerlijk te vinden zijn.</p> 
<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
          <div class="panel-body">
          <strong><p><%= link_to pin.description, pin_path(pin) %></p></strong>
          </div>
          <%= link_to image_tag(pin.image.url(:medium)), pin %>
          <div class="panel-body">
          <div class="actions">
          <%= link_to like_pin_path(pin), method: :put, class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-heart"></span>
          <% end %>
          <strong>Toegevoegd door:</strong>
          <p><%= link_to pin.user.name, pin.user if pin.user %></strong></p>
          </div>
          </div>
    </div>
  <% end %>
</div>
<% else %>
<%= render 'pages/login' %>
<% end %>