<div class="col-xs-14">
  <h3>Search FoodSpot</h3>
  <div class="panel panel-default pinindexpanel">
    <p>Search for your favorite FoodSpot</p>
 
  	<%= form_tag(search_pins_path, method: :get, class: "navbar-form navbar-left pin-search-form") do %>
  	          <div class="form-group">
  	            <%= text_field_tag 'search', params[:search], class: "form-control", placeholder: "[restaurant name]", autofocus: true %>
  	          </div>
  	          <%= submit_tag "Search", class: "btn btn-default" %>
  	        <% end %>
</div>

<%= render 'pins/show_pin_details' %>

</div>

