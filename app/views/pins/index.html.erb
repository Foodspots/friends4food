<div class="col-xs-14">
  <h3>Add HotSpots</h3>
  <div class="panel panel-default">
    <p>Find the HotSpots nearby.</p>
    <%= link_to search_nearest_pins_path, class: "btn btn-add btn-icon" do %>
    Find HotSpots nearby
    <% end %>
    <br></br>

    <p>
    <%= link_to my_recently_visited_path, class: "btn btn-add btn-icon" do %>
    View your recently visited HotSpots
    <% end %>
    </p>  
 
  	<%= form_tag(search_pins_path, method: :get, class: "navbar-form navbar-left") do %>
    <p>Or search in our database of <b><%= @pins.total_count %></b> HotSpots.</p>
  	          <div class="form-group">
  	            <%= text_field_tag 'search', params[:search], class: "form-control", placeholder: "[enter restaurant name]", autofocus: true %>
  	          </div>
  	          <%= submit_tag "Search in database", class: "btn btn-add btn-icon" %>
  	        <% end %>
</div>

<%= render 'pins/show_pin_details' %>

</div>

