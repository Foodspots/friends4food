<h1>Alle recepten</h1>
<p>Bekijk hier alle recepten die op Altijd Heerlijk te vinden zijn.</p>

<% if user_signed_in? %>  
<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
          <%= link_to image_tag(pin.image.url(:medium)), pin %>
          <div class="panel-body">
          <strong>Recept:</strong>
          <p><%= link_to pin.description, pin %></p></p>
          <div class="actions">
          <strong>Toegevoegd door:</strong>
          <p><%= link_to pin.user.name, pin.user if pin.user %></strong></p>
          </div>
          </div>
    </div>
  <% end %>
</div>
<% else %>
<%= render 'pages/login' %>
<% end %>