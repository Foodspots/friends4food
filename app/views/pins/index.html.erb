<div class="panel panel-default">
  <div class="panel-heading">

    <h1>Mijn recepten </h1>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Foto</th>
            <th>Naam gerecht</th>
            <th>Gebruiker</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @pins.each do |pin| %>
            <tr>
              <td><%= image_tag pin.image.url(:thumb) %></td>
              <td><%= pin.description %></td>
              <td><%= pin.user.email if pin.user %></td>
              <td><%= link_to 'Toon recept', pin %></td>
              <% if pin.user == current_user %>
                <td><%= link_to 'Wijzig recept', edit_pin_path(pin) %></td>
                <td><%= link_to 'Verwijder recept', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %> 
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>
    <br>
      <% if user_signed_in? %>
        Voeg een <%= link_to 'nieuw recept', new_pin_path, class: "btn btn-info" %> toe.
      <% else %>
        <%= link_to "log in", new_user_session_path, class: "btn btn-info" %> of  
        <%= link_to "meld je aan", new_user_registration_path, class: "btn btn-info" %> om zelf recepten toe te voegen.
      <% end %>  

  </div>
</div>