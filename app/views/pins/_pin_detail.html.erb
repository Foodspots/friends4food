<% liking_friends = friends_who_liked_pin(pin) %>
<div class="box panel panel-default panel-default-box-width pin">
	<div class="panel-body">
		<h3><%= link_to pin.name, pin_path(pin) %></h3>
		<%= link_to pin do %>
			<div class="pin-img" style="background-image:url(<%= pin.safe_image_url %>);"></div>
		<% end %>
		<p><b><%= pin_distance(pin) %></b> away (<%= pin.place  %>)</p>
		<p class="likedby">Loved by: (<%= liking_friends.count %>)</p>
		<p class="friends">
			<% liking_friends.take(3).each do |p| %>
				<% if p.present? %>
					<%= link_to image_tag(p.photo_url, class: 'pin_liked_image'), p %>
				<% end %>
			<% end %>
			<% if liking_friends.count > 3 %>
				<%= link_to "More", pin_path(pin, anchor: 'liked_by'), class: 'more_link_color' %>
			<% end %>
		</p>
		<div class="actions">
			<% if current_user.liked? pin %>
				<h4>You <span class="glyphicon glyphicon-heart"></span> <%= link_to pin.name, pin_path(pin) %></h4>
			<% else %>
				<%= link_to like_pin_path(pin), method: :put, class: "btn btn-CTA btn-xs" do %> Love FoodSpot
				<% end %>
			<% end %>
		</div>
	</div>
</div>
