<h1>Mijn recepten</h1>
<p>Bekijk hier de recepten die jij hebt toegevoegd aan Altijd Heerlijk.</p>

<% if user_signed_in? %>  
<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
          <div class="panel-body">
          <p><%= pin.description %></p>
          <p><%= link_to 'Bekijk recept', pin_path(pin) %></p>
            <% if pin.user == current_user %>
              <div class="actions">
                  <%= link_to edit_pin_path(@pin) do %>
                    <span class="glyphicon glyphicon-edit"></span>
                    Wijzig
                  <% end %>
                  <%= link_to pin, method: :delete, data: { confirm: 'Weet je het zeker?' } do %>
                    <span class="glyphicon glyphicon-trash"></span>
                     Verwijder
                  <% end %>
              </div>
            <% end %>
          </div>
    </div>
  <% end %>
</div>
<% else %>
<%= render 'pages/login' %>
<% end %>