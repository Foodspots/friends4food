<% if user_signed_in? %>  
  <h1>Recepten van vrienden</h1>
  <p>Bekijk hier de favoriete recepten van jouw vrienden.</p> 
      <div id="pins" class="transitions-enabled">
          <% @pins.each do |pin| %>
                <div class="box panel panel-default">
                    <div class="panel-body">
                      <b>Recept: </b>
                      <p><%= link_to pin.description, pin_path(pin) %></p>
                      <b>Toegevoegd door: </b>
                      <p><%= link_to image_tag(pin.user.image_file_name), pin %></p>
                      <div class="actions">
                       <%= link_to like_pin_path(pin), method: :put, class: "btn btn-success btn-sm" do %>
                       <span class="glyphicon glyphicon-heart"></span>
                       Vind ik lekker!!!!
                       <% end %>
                       <br></br>
                       <%= link_to unlike_pin_path(pin), method: :put, class: "btn btn-danger btn-sm" do %>
                       <span class="glyphicon glyphicon-remove"></span>
                       Niet mijn smaak
                       <% end %>
                      </div>
                    </div>
                </div>
          <% end %>
      </div>
<% else %>
  <%= render 'pages/login' %>
<% end %>


