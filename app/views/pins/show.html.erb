<p><%= link_to 'Terug', pins_path %></p>
<div class="row">
  <div class="col-md-offset-0 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading center">
      	         <p><b>Recept: </b><%= @pin.description %></p>
                  <p><b>Toegevoegd door: </b></p>
                  <p><%= link_to image_tag(@pin.user.image_file_name), @user %></p>
                  <p><%= link_to 'Bekijk alle recepten van deze chef', @pin.user %></p>
                  <p><b>Favoriet recept van: </b></p>
                      <% @pin.votes_for.voters.each do |p| %> 
                       <p><%= link_to image_tag(p.image_file_name), @user %></p>
                      <% end %>
                    <div class="actions">
                         
                      <%= link_to like_pin_path(@pin), method: :put, class: "btn btn-success btn-sm" do %>
                      <span class="glyphicon glyphicon-heart"></span>
                      Vind ik lekker!!!!
                      <% end %>
                      <br></br>
                      <%= link_to unlike_pin_path(@pin), method: :put, class: "btn btn-danger btn-sm" do %>
                      <span class="glyphicon glyphicon-remove"></span>
                      Niet mijn smaak
                      <% end %>
                       
                    </div>
      </div>
                  <div class="panel-body">
                  <p><strong>IngrediÃ«nten:</strong>
                  <%= @pin.ingredients2 %></p>
                  <p><strong>Bereidingswijze:</strong>
                  <%= @pin.preparation %></p>
                  <p><strong>Foto van recept:</strong></p>
                	<%= image_tag @pin.image.url(:medium) %>  <br>   
                  </div>
            </div>    
        </div>
    </div>
  </div>
</div>


