<div id="pins" class="transitions-enabled">
      <% @pins.each do |pin| %>
        <% @pin = pin %>
         <div class="box panel panel-default">
                  <div class="panel-body">
                      <p><b><%= link_to pin.name, pin_path(pin) %></b></p>
                      <p><b>Type:</b> </p>
                      <p><b>Distance: <%= pin_distance %> km</b></p>
                      <p><b>Liked by:</b>
                        <% pin.votes_for.voters.each do |p| %>
                          <% if p.present? %>
                          <p><%= link_to p.name, user_path(@user) %></p>
                          <% end %>
                        <% end %>
                      <div class="actions">
                            <p><%= link_to pin_path(pin) , class: "btn btn-info btn-sm" do %>
                            <span class="glyphicon glyphicon-fullscreen"></span>
                            View location
                            <% end %>

                            <% if current_user.liked? pin %>
                              <%= link_to unlike_pin_path(pin), method: :put, class: "btn btn-danger btn-sm" do %>
                              <span class="glyphicon glyphicon-remove"></span>
                              Unlike
                              <% end %>
                            <% else %>
                              <%= link_to like_pin_path(pin), method: :put, class: "btn btn-success btn-sm" do %>
                              <span class="glyphicon glyphicon-heart"></span>
                              Like 
                              <% end %> 
                            <% end %>
                      </div>
                  </div>
          </div>
     <% end %>
</div>
<%= paginate @pins, theme: 'twitter-bootstrap-3', :pagination_class => pagination_class %>