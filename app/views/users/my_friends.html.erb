<div class="col-xs-14">
    <div class="panel panel-default">
        <div class="panel-body">
            <h5><%=@current_user.name%>, you have <%= current_user.follows.count%>
                friend(s) <span class="glyphicon glyphicon-heart"></span> </h5> 
             <u><%= link_to "Add more", users_path %></u></p>
        </div>  
     </div>  
<% if @followings.present? && @followings.size > 0 %>
<div class="center">
    <div id="pins" class="transitions-enabled friends">
            <% current_user.followings.each do |user| %>
                <div class="box panel panel-default" id = "user_<%= user.id %>">
                <%= render :partial => 'users/user', :locals => {:user => user} %>
                </div>
            <% end %>
    </div>
<% else %>
   <p> Oops, you haven't added any friends yet. </p>
   	     <%= link_to users_path, class: "btn-CTA" do %>
         <span class="glyphicon glyphicon-play"></span>
         Add friends now
         <% end %>
         <br></br>
         <p>Or invite your Facebook friends to join FoodSpots.me. <%= share_snippet %> </p>
<% end %> 
</div>






 



