<% content_for(:bodyclass, 'login')%>
<div class="row">
  <div class="col-md-10 col-md-push-1">
    <div class="panel panel-default loginpanel">
      <div class="panel-body loginnote">
      	<h1>Hi, <%= @user.name %></h1>
        <p>Check out your friends favorite restaurants</p>     
		  <% if not @welcomed %>
  			  <%# This is shown the very first login %>
        <p>You are connected with <b><%= current_user.follows.count %> of your Facebook friends.</b> Do you want to know their favorite restaurants?</p>
		  <% else %>
         <%# This is shown every second login when no location has been shared yet%>
  			 <p>You are connected with <b><%= current_user.follows.count %> of your Facebook friends.</b> Do you want to know their favorite restaurants?</p>
		  <% end %>
          <%= link_to "Check out your friends", my_friends_path(@user), class: 'btn btn-CTA btn-sm' %>
     <br></br>

        <h1>Search in Amsterdam (2238)</h1>
          <div class="search">
          <!--<input type="text" class="form-control input-sm" maxlength="64" placeholder="">
          <button type="submit" class="btn btn-primary btn-sm">Search</button>-->
          <%= form_tag(search_path, method: :get, class: "navbar-form pin-search-form") do %>
              <div class="form-group">
                <%= text_field_tag 'search', params[:search], class: "form-control input-sm", placeholder: "", autofocus: true %>
                <%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
              </div>
          <% end %>
      
    

        <p>Looking for a nice place to eat tonight? View the most <b>popular</b> spots of your friends!</p>
        <%= link_to "View popular spots", pins_path(@pin), class: 'btn btn-CTA btn-sm' %>

        <p>Looking for a place around the corner? View the most <b>nearby</b> restaurants.</p>
        <%= link_to "View nearby spots", search_nearest_pins_path(@pin), class: 'btn btn-CTA btn-sm' %>
       
        </div>

  </div>
</div>
