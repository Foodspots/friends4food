<div class="col-xs-14">
  <div class="panel panel-default">
    <div class="panel-body">
          <div class="navbar--avatar-image" style="background: url(<%= @current_user.photo_url %>); background-size: cover; background-position: center;"></div>
          <h1><%= @user.name %></h1>
        <p>Discover the popular spots of your <%= current_user.follows.count %> friend(s).</p>
             <%= link_to "Discover now!", pins_path(@pin), class: 'btn btn-CTA btn-sm' %>
    </div>
    </div>

    <div class="panel panel-default">
    <div class="panel-body">
    <h5>You <span class="glyphicon glyphicon-heart"></span> <%= @current_user.find_liked_items.size %> restaurants</h5>
    <p>Add some more, so you friends know where to go!</p>
          <div class="search">
          <!--<input type="text" class="form-control input-sm" maxlength="64" placeholder="">
          <button type="submit" class="btn btn-primary btn-sm">Search</button>-->
          <%= form_tag(search_path, method: :get, class: "navbar-form pin-search-form") do %>
              <div class="form-group">
                <%= text_field_tag 'search', params[:search], class: "form-control input-sm", placeholder: "Search restaurant", autofocus: true %>
                <%= submit_tag "Search", class: "btn btn-CTA btn-sm" %>
              </div>
          <% end %>
          </div>
    </div>
    </div>
    
    <div class="panel panel-default">
      <div class="panel-body">
      <h5>You have <b><%= current_user.follows.count %> friend(s)</b> on Foodspots</h5>
           <p>Do you want to know more about your friends?</p>
         <%= link_to "Check out all your friends", my_friends_path(@user), class: 'btn btn-CTA btn-sm' %>
    </div>  
    </div>  
</div>  


