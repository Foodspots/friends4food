<p><%= link_to 'Terug', users_path %></p>
<div class="row">
  <div class="col-md-offset-0 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading center">
        Recepten van: <strong><%=@user.name %></strong>
        <br>
        <div class="panel-body">
        <%= link_to image_tag(@user.image_file_name), @user %>        
        </div>
        
        <span class="glyphicon glyphicon-heart"></span>
        Volg deze chef
        
        <br></br>Aantal recepten: <strong><%= @user.pins.count %></strong>  
         </div> 
      </div>
    </div>
  </div>

<h1>Toegevoegde recepten</h1>
<div id="pins" class="transitions-enabled">
<% if user_signed_in? %> 
  <% @user.pins.each do |pin| %>
          <div class="box panel panel-default">
              <div class="panel-body">
              <strong>Recept:</strong>
              <p><%= link_to pin.description, pin %></p></p>
                <div class="actions">
                <strong>Van:</strong>
                <%= link_to image_tag(@user.image_file_name), pin.user %>  
                </div>   
              <br><%= link_to like_pin_path(pin), method: :put, class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-heart"></span>
              <% end %>  
              </div>
          </div>
  <% end %>
</div>

<% else %>
<%= render 'pages/login' %>
<% end %>