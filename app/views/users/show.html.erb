<%= image_tag @user.image %>
<h1><%= @user.name %></h1>
<p>Bekijk hier de recepten van <%=@user.name %>.</p>

<% if user_signed_in? %>  
<div id="pins" class="transitions-enabled">
  <% @user.pins.each do |pin| %>
    <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
          <div class="panel-body">
          <p><%= pin.description %></p>
          <p>Toegevoegd door: <strong><%= pin.user.name if pin.user %></p></strong>
          <p><%= link_to 'Bekijk recept', pin_path(pin) %></p>
          </div>
    </div>
  <% end %>
</div>



<% else %>
<%= render 'pages/login' %>
<% end %>



