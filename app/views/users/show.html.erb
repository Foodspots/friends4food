<%= link_to :back, class: "btn btn-default" do %>
  <span class="glyphicon glyphicon-chevron-left"></span>
    Back
  <% end %></p>

  

  <% if current_user && current_user != @user %>
    <% if current_user.following?(@user) %>
      <%= link_to "Unfollow", user_unfollow_path(@user), :method => :delete, data: { disable_with: "Please wait..." }, :class => "btn btn-sm btn-danger", :remote => true %>
    <% else %>
      <%= link_to "Follow", user_follow_path(@user), :method => :post, data: { disable_with: "Please wait..." }, :class => "btn btn-sm btn-success", :remote => true %>
    <% end %>
  <% end %>
  

  <div class="panel panel-default">
    <div class="panel-body">
      <h2><%=@user.name %></h2>
      <p><%= link_to image_tag(@user.image_file_name), @user %></p>
    </div>
  </div> 

  <ul class="list-group">
    <li class="list-group-item">
      <span class="badge"><%= @user.find_liked_items.size %></span>
        <b>Favorite restaurants:</b>
            <% @user.find_liked_items.each do |pin| %>
                 <li class="list-group-item">
                 <%= link_to pin.name, pin_path(pin) %>
                  </li>
            <% end %>
    </li>
    <br></br>

    <li class="list-group-item">
      <span class="badge"><%= @user.followings.count %></span>
        <b>Friends:</b>
        <% @user.followings.each do |user| %>
             <li class="list-group-item">
             <%= link_to image_tag(user.image_file_name) %>
             <%= link_to user.name, user_path(user) %>
              </li>
        <% end %>
    </li>
  </ul>
