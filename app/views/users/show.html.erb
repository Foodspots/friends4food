 <div class="col-xs-14">
 <div class="center">
 <h2><%= @user.name %></h2>
 <div class="avatar">
   <%= link_to image_tag(@user.photo_url + '&width=160&height=160'), @user %>
 </div>

 <p><div id="follow_unfollow_btn" class="btn_margin">
 
     	 <% if current_user.following?(@user) %>
     	 			<p><b><%= @user.name %> is your friend.</b></p>No love anymore? <%= link_to "remove", user_unfollow_path(@user), method: :put %>    
       	<% else %>
             <%= link_to "Add Friend", user_follow_path(@user), :method => :post, data: { disable_with: "Please wait..." }, :class => "btn btn-icon btn-like", :remote => true %>
     	<% end %>


 </div></p>	
 </div>
