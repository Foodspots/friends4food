<% content_for(:bodyclass, 'login')%>
<div class="row">
  <div class="col-md-10 col-md-push-1">
    <div class="panel panel-default loginpanel">
      <div class="panel-body loginnote">
      	<h3>Hi <%= @user.name %>,</h3>

		  <% if not @welcomed %>
			  <%# This is shown the very first login %>
      	<p>

      	You are now succesfully imported <b><%= current_user.follows.count %></b> of your Facebook Friends. 
      	

        <br/><br/>

        <h3>Almost there...</h3>
		  <% else %>
			  <%# This is shown after the first login, when someone needs to re-share their location %>
			  <%# You can put some extra text here if you want%>
		  <% end %>

        <p>You are only one step away from using Foodspots.me. Share your location with us and get exploring.</p>
        
        <%= link_to root_path, class: "btn btn-lg btn-default ask_location" do %>
        <span class="glyphicon glyphicon-play"></span>
        Share your location
        <% end %>

        </div>
    </div>
  </div>
</div>
