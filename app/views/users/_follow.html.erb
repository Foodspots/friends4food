<% user = local_assigns.has_key?(:user) ? user : nil %>
<% if user %>
    <% if current_user && current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "Remove friend", user_unfollow_path(user), :method => :delete, :class => "btn btn-sm btn-danger", :remote => true %>
      <% else %>
        <%= link_to "Add friend", user_follow_path(user), :method => :post, :class => "btn btn-sm btn-success", :remote => true %>
      <% end %>
    <% end %>
<% end %>