<% if current_user && current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "Unfollow", user_unfollow_path(user), :method => :delete, data: { disable_with: "Please wait..." }, :class => "btn btn-sm btn-danger", :remote => true %>
  <% else %>
    <%= link_to "Follow", user_follow_path(user), :method => :post, data: { disable_with: "Please wait..." }, :class => "btn btn-sm btn-success", :remote => true %>
  <% end %>
<% end %>