<% if current_user && current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "Remove friend", user_unfollow_path(user), :method => :delete, data: { disable_with: "Please wait..." }, :class => "btn btn-sm btn-danger", :remote => true %>
   	 <button type="button" class="btn btn-default">
                                <span class="glyphicon glyphicon-heart"></span>
                              Like
                              </button>
  <% else %>
    <%= link_to "Add friend", user_follow_path(user), :method => :post, data: { disable_with: "Please wait..." }, :class => "btn btn-sm btn-success", :remote => true %>
  <% end %>
<% end %>