<% user = local_assigns.has_key?(:user) ? user : nil %>
<% if user %>
  <div class="panel-body">
    <div class="actions">
      <p><b>User: </b><%= link_to user.name, user_path(user) %></p></strong>
      <p><%= link_to image_tag(user.image_file_name, class: 'pin_liked_image'), user %></p>
      <p><b>Favorite restaurants: </b><% user.find_liked_items.size %></p>
      <p><b>Friends: </b><% user.followings.count %></p>
      <div class="btn-group.pull-right">
        <%= link_to user_path(user), class: "btn btn-info btn-sm" do %>
        <span class="glyphicon glyphicon-fullscreen"></span>
        View profile
        <% end %>
          <%= render :partial => 'users/follow_unfollow_btn', :locals => {:user => user} %>
      </div>
    </div>
  </div>
<% end %>

