<div class='movableContent'>
              <table width="580" border="0" cellspacing="0" cellpadding="0" align="center">
                <tr><td height='15'></td></tr>
                <tr>
                  <td style='border: 1px solid #27A1E5; border-radius:6px;-moz-border-radius:6px;-webkit-border-radius:6px'>
                    <table width="480" border="0" cellspacing="0" cellpadding="0" align="center">
                      <tr><td height='25'></td></tr>
                      <tr>
                        <td>
                          <div class='contentEditableContainer contentTextEditable'>
                            <div class='contentEditable' style='text-align: center;'>
                              <h2 style="font-size: 20px;">Your weekly recipe for discovering new restaurants!</h2>
                              <br>
                              <p>Hi <% @user.name %>, find below the restaurants you have visited last week.</p>
                            </div>
                          </div>
                        </td>
                      </tr>
                      <tr><td height='24'></td></tr>
                    </table>
                  </td>
                </tr>
              </table>  
            </div>

            <div class='movableContent'>
              <table width="580" border="0" cellspacing="0" cellpadding="0" align="center">
                <tr><td height='40' colspan="3"></td></tr>
                <tr>

                  
            	<ul>
            		<% @top3.each do |v| %>

            		<td width='150'>
                    <table width='150' border='0' cellpadding="0" cellspacing="0" align="center">
                      <tr>
                        <td>
                          <div class='contentEditableContainer contentTextEditable'>
                            <div class='contentEditable' style='text-align: left;'>
                              <h2 style="font-size: 20px;"><% v.name %></h2>
                              <br>
                              <p>You have visited <% v.pin.name %> <% v.pin_visit_count %> times this week. 
                              </p>
                              <br><br>
                              <p>View restaurant <%= v.pin.name %> <%= link_to "here", v.pin_url %>.
                              <br>
                            </div>
                          </div>
                        </td>
                      </tr>
                    </table>
                  </td>

            		<% end %>
            	</ul>

                  

            <div class='movableContent'>
              <table width="580" border="0" cellspacing="0" cellpadding="0" align="center">
                <tr><td height='40'></td></tr>
                <tr>
                  <td style='background:#ffffff; border: 1px solid #27A1E5; border-radius:6px;-moz-border-radius:6px;-webkit-border-radius:6px'>
                    <table width="480" border="0" cellspacing="0" cellpadding="0" align="center">
                      <tr><td height='25'></td></tr>
                      <tr>
                        <td>
                          <div class='contentEditableContainer contentTextEditable'>
                            <div class='contentEditable' style='text-align: center;'>
                              <h2 style="font-size: 20px;">Invite your friends</h2>
                              <br>
                              <p>Invite your friends to join Friends4Food and discover the favorite hotspots in town!
                              </p>
                              <br><br>
                               <p>Add <%= link_to "here", users_url %> more friends to Friends4Food and discover their favorite hotspots in town!
                              <br>
                            </div>
                          </div>
                        </td>
                      </tr>
                      <tr><td height='24'></td></tr>
                    </table>
                  </td>
                </tr>
              </table>  
            </div>

            <tr><td height='15'></td></tr>
            <tr><td ><hr style='height:1px;background:#27A1E5;border:none;'></td></tr>

